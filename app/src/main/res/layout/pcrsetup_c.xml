    <RelativeLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/bPCRSubtractMM"/>

        <Button
            android:text="-"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/bPCRSubtractMM"/>

        <TextView
            android:id="@+id/tvPCRMMNumber"
            android:layout_toRightOf="@+id/bPCRSubtractMM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="20dp"
            android:paddingTop="10dp"

            />
        <Button
            android:text="+"
            android:id="@+id/bPCRAddMM"
            android:layout_toRightOf="@+id/tvPCRMMNumber"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>





</LinearLayout>