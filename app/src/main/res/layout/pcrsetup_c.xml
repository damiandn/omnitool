            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:text=""
                android:paddingBottom="10dip"
                android:padding="3dip"
                android:id="@+id/tvInitialDenaturationTemp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="temperature"
                />
            <TextView
                android:text=""
                android:gravity="center_horizontal"
                android:padding="3dip"
                android:id="@+id/tvInitialDenaturationTime"
                android:layout_column="18"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="time"/>


        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >




            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
            android:text=""
            android:padding="3dip"
            android:id="@+id/tvDenaturationTemp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="den_temp"
            />
            <TextView
                android:text=""
                android:gravity="center_horizontal"
                android:padding="3dip"
                android:id="@+id/tvDenaturationTime"
                android:layout_column="18"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="den_time"/>

        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:text="primer Tm - 5C"
                android:padding="3dip"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text=""
                android:gravity="center_horizontal"
                android:padding="3dip"
                android:id="@+id/tvAnnealingTime"
                android:layout_column="18"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="anneal_time"/>

        </LinearLayout>


            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:text=""
                    android:padding="3dip"
                    android:id="@+id/tvExtensionTemp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="exten_temp" />



                <TextView
                    android:text=""
                    android:gravity="center_horizontal"
                    android:padding="3dip"
                    android:id="@+id/tvExtensionTime"
                    android:layout_column="18"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="exten_time"/>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>




            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/tvFinalExtensionTemp"
                    android:padding="3dip"
                    android:paddingTop="10dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="final_temp"
                    />
                <TextView
                    android:text="5-15 minutes"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dip"
                    android:layout_column="18"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>



            </LinearLayout>



            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >



            </LinearLayout>




            <LinearLayout android:layout_width="fill_parent"
