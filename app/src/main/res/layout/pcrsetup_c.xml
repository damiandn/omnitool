                    android:text=""
                    android:id="@+id/tvPCRBufferAmount"
                    android:gravity="center_horizontal"
                    android:padding="3dip"
                    android:layout_column="18"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:text="Primer 1"
                    android:padding="3dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvPCRPrimer1"
                    android:text=""
                    android:gravity="center_horizontal"
                    android:padding="3dip"
                    android:layout_column="18"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:text="Primer 2"
                    android:padding="3dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=""
                    android:id="@+id/tvPCRPrimer2"

                    android:gravity="center_horizontal"
                    android:padding="3dip"
                    android:layout_column="18"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:text="dNTP"
                    android:padding="3dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=""
                    android:id="@+id/tvPCRdNTP"
                    android:gravity="center_horizontal"
                    android:padding="3dip"
                    android:layout_column="18"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



            <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

                <TextView
                    android:text="template"
                    android:padding="3dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text=""
                    android:id="@+id/tvPCRtemplate"
                    android:gravity="center_horizontal"
                    android:padding="3dip"
                    android:layout_column="18"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:text="enzyme"
                    android:padding="3dip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=""
                    android:id="@+id/tvPCREnzyme"
                    android:gravity="center_horizontal"
                    android:padding="3dip"
                    android:layout_column="18"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>





        </LinearLayout>


    </android.support.v7.widget.CardView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#000000"
        android:layout_marginTop="15dp"/>



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_PCRtime"
        android:layout_gravity="center"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        card_view:contentPadding="5dp"
        >



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:textStyle="bold"
                android:text="Temperature (C)"
                android:padding="5dip"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:text="Time (s)"
                android:gravity="center_horizontal"
                android:padding="5dip"
                android:layout_column="18"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>
]  <View
            android:layout_width="fill_parent"
