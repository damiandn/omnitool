<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5CAE9"
    android:statusBarColor="#303F9F"
    >

    <TextView android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:elevation="8dp"
        android:id="@+id/tvMolBioTitle_CodonLookup"
        android:text="Codon Lookup"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:transitionName="trans_molbio"
        android:background="#3F51B5"
        android:drawSelectorOnTop="true"
        android:gravity="center"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="100"
        android:elevation="5dp"
        android:background="#C5CAE9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
         android:background="#C5CAE9"
        >

        <Button android:layout_width="50dp"
           android:layout_height="wrap_content"
            android:id="@+id/codonadenine"
            android:text="A"
            android:layout_marginRight="10dp"
            android:layout_weight="20"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"

            >
         </Button>

        <Button android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/codonthymine"
            android:text="T"
            android:layout_weight="20"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            >
        </Button>

        <Button android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/codonguanine"
            android:text="G"
            android:layout_weight="20"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            >
        </Button>

        <Button android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/codoncytosine"
            android:text="C"
            android:layout_weight="20"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            >
        </Button>

        <Button android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/codonclear"
            android:layout_weight="20"
            android:text="del"
             android:layout_marginTop="15dp"
            >
        </Button>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/tvcodoncurrent"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        />
    </LinearLayout>



    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/codonListView"
        android:background="#FFFFFF"

        />

</LinearLayout>