<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Wash Timer"
        android:textSize="20dp"
        android:background="#009688"
        android:textColor="#FFFFFF"
        android:id="@+id/tvWashTimerTitle"
        android:elevation="8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="3dp"
        android:elevation="5dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Setup Washes"
        android:id="@+id/tvSetupOfWashes"
        android:background="#B2DFDB"
        android:layout_alignParentStart="true"
        />

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="Number of washes"
        android:id="@+id/tvNumberOfWashes"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:padding="3dp"

        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/etNumberOfWashes"
        android:layout_alignBottom="@+id/tvPCRProductSize"
         />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textSize="20dp"
        android:layout_weight="10"
        android:layout_marginTop="10dp"

        android:layout_below="@+id/tvNumberOfWashes"
        android:text="Time per wash (min)"
        android:id="@+id/tvTimePerWash"
         />

    <EditText
        android:layout_alignBottom="@+id/tvPCRTemplateAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:layout_marginTop="10dp"
        android:padding="3dp"

        android:textSize="20dp"
        android:id="@+id/etTimePerWash"

        />


</LinearLayout>


<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Timer"
        android:id="@+id/bStartWashes"
        android:layout_below="@+id/tvTimePerWash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
    android:layout_gravity="center_horizontal" />

</LinearLayout>