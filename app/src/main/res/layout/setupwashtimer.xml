<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:textSize="20dp"
        android:text="Number of washes"
        android:id="@+id/tvNumberOfWashes"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:textSize="15dp"
        android:id="@+id/etNumberOfWashes"
        android:layout_alignBottom="@+id/tvPCRProductSize"

        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textSize="20dp"
        android:layout_below="@+id/tvNumberOfWashes"
        android:text="Time per wash (min)"
        android:id="@+id/tvTimePerWash"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_alignBottom="@+id/tvPCRTemplateAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:layout_alignParentEnd="true"
        android:textSize="15dp"
        android:id="@+id/etTimePerWash"
        android:layout_below="@+id/etNumberOfWashes"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Timer"
        android:id="@+id/bStartWashes"
        android:layout_below="@+id/tvTimePerWash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

</RelativeLayout>