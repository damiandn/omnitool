<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Fluorophore List"
        android:textSize="20dp"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:id="@+id/tvFluorophoreChartTitle"
        android:elevation="8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        />


    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llFPRecyclerCard"
        android:elevation="5dp"
        android:weightSum="10"
        android:background="#C8E6C9">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Excitation"
            android:id="@+id/tvFPExcitation"
            android:layout_weight="2"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Name"
            android:id="@+id/tvFPName"
            android:layout_weight="6"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Emmission"
            android:id="@+id/tvFPEmission"
            android:layout_weight="2"
            android:gravity="center"

            />


    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/fpRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />


</LinearLayout>