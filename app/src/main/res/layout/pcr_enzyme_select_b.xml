<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Setup PCR"
        android:transitionName="trans_codonlookup"
        android:textSize="30dp"
        android:background="#3F51B5"
        android:textColor="#FFFFFF"
        android:id="@+id/tvSetupPCRTitle"
        android:elevation="8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"

        />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Enter template information"
        android:textSize="20dp"
        android:background="#C5CAE9"
        android:id="@+id/tvSetupPCR_setup_amounts"
        android:elevation="5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:textSize="20dp"
        android:layout_weight="10"
        android:text="Product Size (bp)"
        android:id="@+id/tvPCRProductSize"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:textSize="15dp"
        android:id="@+id/etPCRProductSize"
        android:layout_alignBottom="@+id/tvPCRProductSize"
        />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="10"
        android:layout_below="@+id/tvPCRProductSize"
        android:text="Template amount (uL)"
        android:id="@+id/tvPCRTemplateAmount"
        android:layout_alignParentStart="true" />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:textSize="15dp"
        android:id="@+id/etPCRTemplateAmount"
        android:layout_alignBottom="@+id/tvPCRProductSize"
         />

    </LinearLayout>

    <TextView

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Select Enzyme"
        android:textSize="20dp"
        android:elevation="5dp"
        android:id="@+id/tvSelectEnzyme"
        android:layout_gravity="center_horizontal"
        android:background="#C5CAE9"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <ListView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvSelectPCREnzyme"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvSelectEnzyme" />
</LinearLayout>